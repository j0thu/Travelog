<%- include('partials/header')%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new place</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description" required>
                </div>
                
                <label>Visited</label>
                <input type="checkbox" name = "visited">
                <label>Bucket</label>
                <input type="checkbox" name = "bucket">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/places">Go Back</a>
        </div>
    </div>
</div>
<%- include('partials/footer')%>
